# =============================================================================
# SochDB Docker Environment Variables
# =============================================================================
# Copy this file to .env and customize for your deployment

# SochDB Configuration
SOCHDB_VERSION=latest
RUST_LOG=info

# Domain for production (used by Traefik)
DOMAIN=localhost

# Let's Encrypt email for TLS certificates
ACME_EMAIL=admin@sochdb.dev

# Grafana credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=sochdb

# Resource limits (production)
SOCHDB_MEMORY_LIMIT=4G
SOCHDB_CPU_LIMIT=2
